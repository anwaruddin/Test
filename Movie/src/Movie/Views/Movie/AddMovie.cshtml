@model Movie.Models.MovieViewModel


<form asp-action="AddMovie" role="form">


    <div class="modal-body form-horizontal">
        <div class="form-group">
            <label asp-for="MovieName" class="col-lg-3 col-sm-3 control-label"></label>
            <div class="col-lg-6">
                <input asp-for="MovieName" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Year" class="col-lg-3 col-sm-3 control-label"></label>
            <div class="col-lg-6">
                <input asp-for="Year" class="form-control" />
            </div>
        </div>
      
       <button type="submit" class="btn btn-success" id="btnSubmit">Add Movie</button>
    </div>

</form>